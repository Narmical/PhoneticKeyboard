<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hoardingsinc.phoneticskeyboard.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/presentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/presentation" />

        <Button
            android:id="@+id/button_open_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minEms="19"
            android:paddingTop="12dp"
            android:text="@string/open_settings" />

        <Button
            android:id="@+id/button_open_keyboard_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minEms="19"
            android:paddingTop="12dp"
            android:text="@string/open_keyboard_selection" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="Preferred layout:" />

        <RadioGroup
            android:id="@+id/radio_group_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_normal_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/radio_normal"
                android:textColor="#555" />

            <RadioButton
                android:id="@+id/radio_extended_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/radio_extended"
                android:textColor="#555" />

            <RadioButton
                android:id="@+id/radio_compact_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/radio_compact"
                android:textColor="#555" />

        </RadioGroup>

        <TextView
            android:id="@+id/pronunroid_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="@string/pronunroid_ad" />

        <Button
            android:id="@+id/button_pronunroid_ad"
            style="?borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_pronunroid"
            android:drawablePadding="8dp"
            android:paddingTop="12dp"
            android:text="@string/pronunroid_name"
            android:textColor="#888" />

    </LinearLayout>

</ScrollView>
